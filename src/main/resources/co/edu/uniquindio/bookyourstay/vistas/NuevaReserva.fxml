<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="20">
    <Text text="Nueva reserva" styleClass="titulo"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Alojamiento:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="lblAlojamiento" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Fecha de entrada:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpFechaEntrada" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Fecha de salida:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpFechaSalida" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Número de huéspedes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Spinner fx:id="spHuespedes" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Total estimado:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="lblTotal" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Confirmar reserva" fx:id="btnConfirmar" defaultButton="true"/>
</VBox>