<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.bookyourstay.controladores.propietario.RegistrarAlojamientoController"
            prefWidth="600" prefHeight="450">

    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
            <children>
                <Label text="Registrar Alojamiento" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

                <TextField fx:id="txtNombre" promptText="Nombre del alojamiento" />
                <TextField fx:id="txtCiudad" promptText="Ciudad" />
                <TextField fx:id="txtDescripcion" promptText="Descripción" />
                <TextField fx:id="txtCapacidadMax" promptText="Capacidad máxima" />
                <TextField fx:id="txtPrecioNoche" promptText="Precio por noche" />

                <ComboBox fx:id="cmbTipoAlojamiento" promptText="Tipo de alojamiento" />

                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="btnRegistrar" text="Registrar" onAction="#registrarAlojamiento"/>
                        <Button fx:id="btnCancelar" text="Cancelar" onAction="#cancelar"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>