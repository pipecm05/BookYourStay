<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:id="gridPane" xmlns:fx="http://javafx.com/fxml"
          fx:controller="co.edu.uniquindio.bookyourstay.controladores.RegistroController"
          hgap="10" vgap="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Cédula:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="cedulaField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Correo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="correoField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Contraseña:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <PasswordField fx:id="contrasenaField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Confirmar Contraseña:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <PasswordField fx:id="confirmarContrasenaField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Rol de usuario:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ComboBox fx:id="rolUsuarioCombo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="Registrar" GridPane.rowIndex="6" GridPane.columnIndex="1" onAction="#registrarUsuario"/>

    <Button text="Volver" GridPane.rowIndex="7" GridPane.columnIndex="1" onAction="#irAMenuPrincipal"/>

    <Label fx:id="mensajeLabel" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-text-fill: red;"/>

</GridPane>