<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.bookyourstay.controladores.propietario.MisAlojamientosController"
      spacing="20" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <Label text="Mis Alojamientos" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <ListView fx:id="listaAlojamientos"
              prefHeight="300"
              prefWidth="400"
              style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;"/>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="btnEditar" text="Editar" onAction="#editarAlojamiento"
                prefWidth="150"
                style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarAlojamiento"
                prefWidth="150"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>